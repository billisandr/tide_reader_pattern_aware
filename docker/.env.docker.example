# Docker environment variables template
# Copy to .env and modify as needed

# Image source directory (where input images are located)
IMAGE_SOURCE_DIR=./data/input

# Processing configuration
PROCESS_INTERVAL=60
CALIBRATION_MODE=false
DEBUG_MODE=false
USE_GUI_SELECTOR=false

# Database configuration
DB_PATH=/app/data/output/measurements.db

# Web server configuration (if using web interface)
SECRET_KEY=your-secret-key-here
ADMIN_USER=admin
ADMIN_PASS=secure-password

# Display configuration for GUI applications
# Uncomment and set if using GUI features in Docker
# DISPLAY=:0